<html>
<head>
  <title>City Gram + Search Proof of Concept</title>
  <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/foundation/5.5.0/css/foundation.css">
  <link rel='https://cdnjs.cloudflare.com/ajax/libs/leaflet/0.7.3/leaflet.css' />
  <link rel="stylesheet" type="text/css" href="stylesheets/app.css">
  <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>

</head>
<body ng-app='CityGram'>
  <nav class='top-bar'>
    <ul class='title-area'>
      <li class='name'><h1><a href="#">City Gram</a></h1></li>
    </ul>
  </nav>

  <div ng-controller='SearchCtrl' id='events_holder' class='row'>
    <h3>{{site_title}}</h3>

    <form>
      <div class='large-4 columns'>
        <label>Search City
          <input ng-model="home.search" type="text" autofocus="autofocus" class="form-control" googleplace>
        </label>
      </div>
    </form>

    <div class='row ig-list'>
      <div ng-repeat='pic in picture_results' class='ig-card large-2 small-8'>
        <img ng-src={{pic.images.low_resolution.url}} />

            <span class='eye'>
              <a href="#" data-reveal-id="firstModal" ng-click=individualIGimage(pic.id)>
                <small>Click</small></a>
            </span>

        <span class='hover-image-details'>
          <small class='.text-left'>
            <a href='#' data-reveal-id="firstModal" ng-click=individualIGimage(pic.id) > {{pic.caption.text}} </a></small>
          </span>
      </div>
    </div> 

    <div id="firstModal" class="reveal-modal" data-reveal>
      <div class="row">
        <div class="large-8 columns">
          <img ng-src={{loadedImage.images.standard_resolution.url}} />
        </div>
        <div class="large-4 columns">
            <img ng-src={{loadedImage.user.profile_picture}} class='profile_picture' />
            <h4 class='subheader'>
                {{loadedImage.user.username}}
            </h4>
          <p>{{loadedImage.caption.text}}</p>
        </div>
        <div map></div>
    </div>
      <a class="close-reveal-modal">&#215;</a>
    </div>

<!-- end of controller div.  -->
  </div>

  <script src='https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.13/angular.js'></script>
  <script src='https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.13/angular-route.min.js'></script> 
  
  <script src='https://cdnjs.cloudflare.com/ajax/libs/foundation/5.5.0/js/foundation.min.js'></script>

  <script src='javascript/app.js'></script>
  <script src='javascript/directives.js'></script>
  <script src='javascript/map.directive.js'></script>

  <script src="http://maps.googleapis.com/maps/api/js?libraries=places&sensor=false&language=en"></script>


  <script>
      $(document).foundation();
  </script>
</body>
</html>